<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PageBackgroundColor">#F5F7FA</Color>
    <Color x:Key="PanelBackgroundColor">#E6F0FA</Color>
    <Color x:Key="HeaderBackgroundColor">#003F7D</Color>    
    <Color x:Key="PrimaryTextColor">#2D2D2D</Color>
    <Color x:Key="SecondaryTextColor">#6E6E6E</Color>
    <Color x:Key="HeaderTextColor">#FFFFFF</Color>
    <Color x:Key="HeaderTextDarkColor">#1A1A1A</Color>
    <Color x:Key="PrimaryActionColor">#005EB8</Color> 
    <Color x:Key="PrimaryActionHoverColor">#1976D2</Color> 
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="ErrorColor">#DC3545</Color>
    <Color x:Key="BorderColor">#D0D5DD</Color>
    <Color x:Key="InputFieldBackgroundColor">#FFFFFF</Color>
    <Color x:Key="InputFieldBorderColor">#D0D5DD</Color>


    <!-- Brushes -->
    <!-- Layout og baggrunde -->
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackgroundColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}" /> <!-- Mørk blå baggrund til fx navigation --> 

    <!-- Tekst -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="HeaderTextBrush" Color="{StaticResource HeaderTextColor}" /> <!-- Hvid tekst til mørk baggrund -->
    <SolidColorBrush x:Key="HeaderTextDarkBrush" Color="{StaticResource HeaderTextDarkColor}" />

    <!-- Interaktive elementer -->
    <SolidColorBrush x:Key="PrimaryActionBrush" Color="{StaticResource PrimaryActionColor}" /> <!-- Primær knap, fx opret medarbejder -->
    <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="{StaticResource PrimaryActionHoverColor}" /> <!-- Hover-effekt til primærknap -->
    <SolidColorBrush x:Key="InputFieldBackgroundBrush" Color="{StaticResource InputFieldBackgroundColor}" />
    <SolidColorBrush x:Key="InputFieldBorderBrush" Color="{StaticResource InputFieldBorderColor}" />

    <!-- Statusindikatorer -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

    <!-- Grænser og linjer -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
</ResourceDictionary>