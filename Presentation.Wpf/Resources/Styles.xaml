<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Fonts-->
    <FontFamily x:Key="PrimaryFont">Open Sans</FontFamily>
    <FontFamily x:Key="HeaderFont">Montserrat</FontFamily>

    <!-- Base styles TextBlocks -->
    <Style x:Key="BaseTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="BaseHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource HeaderFont}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <!-- Eksempel på brug af base-styles i en specificeret style -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
    </Style>

    <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseHeaderTextStyle}">
        <Setter Property="Foreground" Value="{DynamicResource HeaderTextDarkBrush}" />
    </Style>

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryActionBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrimaryActionHoverBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Input field styles -->
    <Style TargetType="TextBox" x:Key="InputFieldStyle">
        <Setter Property="Background" Value="{DynamicResource InputFieldBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource InputFieldBorderBrush}" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="Height" Value="36" />
    </Style>

    <!-- Readonly Input Field Style -->
    <Style x:Key="ReadonlyInputFieldStyle" TargetType="TextBox" BasedOn="{StaticResource InputFieldStyle}">
        <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="Focusable" Value="False" />
    </Style>

    <!-- Reject/Delete Button Style -->
    <Style x:Key="RejectButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#B52A37" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox style -->
    <Style TargetType="ComboBox" x:Key="InputFieldComboStyle">
        <Setter Property="Background" Value="{DynamicResource InputFieldBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource InputFieldBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="Height" Value="30" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryActionHoverBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ToggleButton style (styrer pilen i ComboBox) -->
    <Style TargetType="ToggleButton">
        <Setter Property="Background" Value="{DynamicResource InputFieldBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource InputFieldBorderBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Padding" Value="5" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryActionHoverBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DataGrid column header style (uses for all list views (DeviceView + EmployeeView)) -->
    <Style x:Key="StandardDataGridHeaderStyle"
           TargetType="DataGridColumnHeader">

        <!-- Header text styling -->
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />

        <!-- Header background and bottom border -->
        <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />

        <!-- Header content alignment -->
        <Setter Property="HorizontalContentAlignment" Value="Left" />

        <!-- Header padding (controls spacing around "Device", "Type", etc.) -->
        <Setter Property="Padding" Value="24,12" />
    </Style>



    <!-- DataGrid style -->
    <Style TargetType="DataGrid" x:Key="EmployeeDataGridStyle">
        <!-- Font for all list views -->
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />

        <!-- Zebra rows: white / light grey / white / light grey -->
        <Setter Property="RowBackground" Value="{DynamicResource PanelBackgroundBrush}" />
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource PageBackgroundBrush}" />
        <Setter Property="AlternationCount" Value="2" />

        <!-- Outer border around the DataGrid -->
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />

        <!-- Horizontal grid lines between rows -->
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}" />

        <!-- Column header appearance -->
        <Setter Property="ColumnHeaderHeight" Value="40" />
        <Setter Property="ColumnHeaderStyle"
                Value="{StaticResource StandardDataGridHeaderStyle}" />

        <!-- Row style (hover and selected states) -->
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
                    <Style.Triggers>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryActionHoverBrush}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <!-- Selected -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryActionBrush}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Card / panel style -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <!-- Card background -->
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
        <!-- Rounded corners -->
        <Setter Property="CornerRadius" Value="16" />
        <!-- Inner padding -->
        <Setter Property="Padding" Value="16" />
    </Style>
</ResourceDictionary>
    
    