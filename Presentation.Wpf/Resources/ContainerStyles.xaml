<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- SearchbarPanel style -->
    <Style x:Key="SearchPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0,0,0,20" />
    </Style>

    <!-- List container style for border around lists -->
    <Style x:Key="ListContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Card / panel style -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <!-- Card background -->
        <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}" />
        <!-- Rounded corners -->
        <Setter Property="CornerRadius" Value="16" />
        <!-- Inner padding -->
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Circular icon container -->
    <Style x:Key="StatusIconCircleStyle"
       TargetType="Border">
        <!-- Fixed size and circle shape -->
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="48" />
        <Setter Property="CornerRadius" Value="24" />

        <!-- Align left and center vertically in parent layout -->
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>