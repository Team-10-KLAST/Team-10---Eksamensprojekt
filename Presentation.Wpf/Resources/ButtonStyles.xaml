<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryActionBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrimaryActionHoverBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Reject/Delete Button Style -->
    <Style x:Key="RejectButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="0,0,10,0" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#B52A37" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Action button style for buttons inside DataGrid cells -->
    <Style x:Key="GridActionButtonStyle"
   TargetType="Button"
   BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Padding" Value="10,6" />
    </Style>
</ResourceDictionary>