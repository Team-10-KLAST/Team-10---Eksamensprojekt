<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Presentation.Wpf.ViewModels"
                    xmlns:views="clr-namespace:Presentation.Wpf.Views">

    <!-- Dashboard -->
    <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
        <views:DashboardView />
    </DataTemplate>

    <!-- Employee -->
    <DataTemplate DataType="{x:Type vm:EmployeeViewModel}">
        <views:EmployeeView />
    </DataTemplate>

    <!-- Device -->
    <DataTemplate DataType="{x:Type vm:DeviceViewModel}">
        <views:DeviceView />
    </DataTemplate>

    <!-- AddRequest -->
    <DataTemplate DataType="{x:Type vm:AddRequestViewModel}">
        <views:AddRequestView />
    </DataTemplate>

    <!-- ProcessRequest -->
    <DataTemplate DataType="{x:Type vm:ProcessRequestViewModel}">
        <views:ProcessRequestView />
    </DataTemplate>

    <!-- AddEmployee -->
    <DataTemplate DataType="{x:Type vm:AddEmployeeViewModel}">
        <views:AddEmployeeView />
    </DataTemplate>

    <!-- DeleteEmployee -->
    <DataTemplate DataType="{x:Type vm:DeleteEmployeeViewModel}">
        <views:DeleteEmployeeView />
    </DataTemplate>
    
    <!-- RegisterDevice -->
    <DataTemplate DataType="{x:Type vm:RegisterDeviceViewModel}">
        <views:RegisterDeviceView />
    </DataTemplate>
    
    <!-- UpdateDevice -->
    <DataTemplate DataType="{x:Type vm:UpdateDeviceViewModel}">
        <views:UpdateDeviceView />
    </DataTemplate>

    <!-- RoleSelection -->
    <DataTemplate DataType="{x:Type vm:RoleSelectionViewModel}">
        <views:RoleSelectionView />
    </DataTemplate>
    
    <!-- Navigation -->
    <DataTemplate DataType="{x:Type vm:NavigationViewModel}">
        <views:NavigationView />
    </DataTemplate>
    
    <!-- TerminateEmployee -->
    <DataTemplate DataType="{x:Type vm:TerminateEmployeeViewModel}">
        <views:TerminateEmployeeView />
    </DataTemplate>

</ResourceDictionary>