<UserControl x:Class="Presentation.Wpf.Views.AddEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             Background="{StaticResource PageBackgroundBrush}"
             d:DesignHeight="500" d:DesignWidth="450">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Name Row -->
            <RowDefinition Height="Auto"/>
            <!-- Email Row -->
            <RowDefinition Height="Auto"/>
            <!-- Dept & Role Row -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Add employee"
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- FirstName & LastName -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- First Name -->
            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                <TextBlock Text="First Name*"
                           Style="{StaticResource BaseTextStyle}" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                         Height="33"
                         Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,0"/>
            </StackPanel>

            <!-- Last Name -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <TextBlock Text="Last Name*"
                           Style="{StaticResource BaseTextStyle}" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                         Height="33"
                         Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Email Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Email*"
                           Style="{StaticResource BaseTextStyle}"                       
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBlock Text="{Binding EmailErrorMsg}" 
                           Foreground="Red" 
                           FontSize="11" 
                           Margin="10,0,0,0" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Height="33"
                     Background="{StaticResource InputFieldBackgroundBrush}"
                     BorderBrush="{StaticResource InputFieldBorderBrush}"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Department & Role Section -->
        <Grid Grid.Row="3" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Department -->
            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                <TextBlock Text="Department"
                           Style="{StaticResource BaseTextStyle}" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Departments}"
                          SelectedItem="{Binding SelectedDepartment}"
                          DisplayMemberPath="Name"
                          Height="33"
                          Style="{StaticResource InputFieldComboStyle}"/>
            </StackPanel>

            <!-- Role -->
            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                <TextBlock Text="Role"
                           Style="{StaticResource BaseTextStyle}" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <ComboBox ItemsSource="{Binding Roles}"
                          SelectedItem="{Binding SelectedRole}" 
                          DisplayMemberPath="Name"
                          Height="33"
                          Style="{StaticResource InputFieldComboStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">

            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource RejectButtonStyle}"
                    Margin="0,0,8,0"/>

            <Button Content="Add Employee"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>