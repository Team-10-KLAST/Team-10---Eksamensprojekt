<UserControl x:Class="Presentation.Wpf.Views.AddEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Height="400" Width="500" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Create Employee"
                       FontSize="20"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="First Name*" Margin="0,0,0,0"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Last Name*" Margin="0,0,0,0"/>

            <TextBox Grid.Row="2" Grid.Column="0" 
                     Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,0"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,0"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Email*" Margin="0,0,0,0"/>
            <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                     Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,0"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="Department" Margin="0,0,0,0"/>
            <ComboBox Grid.Row="6" Grid.Column="0"
                      ItemsSource="{Binding Departments}"
                      SelectedItem="{Binding SelectedDepartment}" 
                      Margin="0,0,0,0"/>

            <TextBlock Grid.Row="5" Grid.Column="1" Text="Role" Margin="0,0,0,0"/>
            <ComboBox Grid.Row="6" Grid.Column="1"
                      ItemsSource="{Binding Roles}"
                      SelectedItem="{Binding SelectedRole}" 
                      Margin="0,0,0,0"/>

            <StackPanel Grid.Row="7" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="100" Height="25" Command="{Binding CancelCommand}" />
                <Button Content="Save Employee" Width="100" Height="25" Command="{Binding SaveCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
