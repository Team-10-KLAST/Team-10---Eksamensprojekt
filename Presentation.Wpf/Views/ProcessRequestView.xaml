<UserControl x:Class="Presentation.Wpf.Views.ProcessRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views" xmlns:viewmodels="clr-namespace:Presentation.Wpf.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ProcessRequestViewModel}"
             mc:Ignorable="d" 
             Background="{StaticResource PageBackgroundBrush}"
             d:DesignHeight="800" d:DesignWidth="450">
    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--Header-->
            <RowDefinition Height="Auto" />
            <!--Info-->
            <RowDefinition Height="Auto"/>
            <!--Button-->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Process request"
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1" Margin="0,0,0,24">

            <!-- Tentative Assignee -->
            <TextBlock Text="Tentative assignee (email)" 
                       Style="{StaticResource BodyTextStyle}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>
            <TextBox Style="{StaticResource ReadonlyInputFieldStyle}" 
                     Text="{Binding TentativeAssigneeEmail, UpdateSourceTrigger=PropertyChanged}"
                     Height="33"
                     Margin="0,0,0,12"/>


            <!-- Type -->
            <TextBlock Text="Device Type" Style="{StaticResource BodyTextStyle}" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>
            <TextBox Text="{Binding DeviceType}" 
                     Style="{StaticResource ReadonlyInputFieldStyle}" 
                     Height="33"
                     Margin="0,0,0,12"/>


            <!-- OS -->
            <TextBlock Text="Operative System" Style="{StaticResource BodyTextStyle}" 
                       Margin="0,0,0,4"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding OperatingSystem}" 
                     Style="{StaticResource ReadonlyInputFieldStyle}" 
                     Height="33"
                     Margin="0,0,0,12"/>


            <!-- Location -->
            <TextBlock Text="Location (country)" 
                       Style="{StaticResource BodyTextStyle}" 
                       Margin="0,0,0,4"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding Location}" 
                     Style="{StaticResource ReadonlyInputFieldStyle}" 
                     Height="33"
                     Margin="0,0,0,12"/>

            <!-- Needed by -->
            <TextBlock Text="Needed by" 
                       Style="{StaticResource BodyTextStyle}" 
                       Margin="0,0,0,4"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding NeededByDateString, Mode=OneWay}" 
                     Style="{StaticResource ReadonlyInputFieldStyle}" 
                     Height="33"
                     Margin="0,0,0,12"/>

            <!-- Tentative comment -->
            <TextBlock Text="Tentative comment" 
                       Style="{StaticResource BodyTextStyle}" 
                       Margin="0,0,0,4"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding Justification}" 
                     Style="{StaticResource ReadonlyInputFieldStyle}" 
                     IsReadOnly="True"
                     Height="33" 
                     Margin="0,0,0,12"/>

            <!-- Approver -->
            <TextBlock Text="Approver (email)" 
                       Style="{StaticResource BodyTextStyle}" 
                       Margin="0,0,0,4"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding Approver, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource InputFieldStyle}" 
                     Height="33"
                     Margin="0,0,0,0"/>

            <!-- Error message -->
            <TextBlock Text="{Binding EmailErrorMsg}" 
                       Foreground="Red" 
                       FontSize="12" 
                       Margin="0,0,0,0"/>

            <!-- Comment -->
            <TextBlock Text="Comment" 
                       Style="{StaticResource BodyTextStyle}" 
                       Margin="0,0,0,4"
                       FontWeight="SemiBold"/>
            <TextBox 
                     Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource InputFieldStyle}" 
                     AcceptsReturn="True" 
                     Height="33" />
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Reject"
                    Style="{StaticResource RejectButtonStyle}"
                    Command="{Binding RejectCommand}" />

            <Button Content="Approve &amp; Plan"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding ApproveCommand}" />
        </StackPanel>
    </Grid>
</UserControl>

