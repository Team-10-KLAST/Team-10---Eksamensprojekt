<UserControl x:Class="Presentation.Wpf.Views.OverlayHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views">

    <Grid x:Name="Root"
          Background="Transparent"
          Visibility="{Binding IsOverlayOpen, Converter={StaticResource BoolToVisibilityConverter}}"
          Panel.ZIndex="999">

        <!-- Dark background -->
        <Rectangle Fill="#80000000"
                   Cursor="Hand">
            <Rectangle.InputBindings>
                <MouseBinding MouseAction="LeftClick"
                              Command="{Binding CloseOverlayCommand}" />
            </Rectangle.InputBindings>
        </Rectangle>

        <!-- Overlay panel -->
        <Border Background="{DynamicResource PanelBackgroundBrush}"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                BorderBrush="#DDD"
                BorderThickness="1"
                Padding="16"
                Width="{Binding ActualWidth,
                                ElementName=Root,
                                Converter={StaticResource MultiplyDoubleConverter},
                                ConverterParameter=0.4}"
                MaxWidth="600">

            <ContentControl Content="{Binding CurrentOverlay}" />
        </Border>

    </Grid>
</UserControl>



