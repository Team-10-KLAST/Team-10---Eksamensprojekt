<UserControl x:Class="Presentation.Wpf.Views.TerminateEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <StackPanel Margin="20" VerticalAlignment="Stretch">

        <!-- Header -->
        <TextBlock Text="Terminate employee"
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="0 0 0 20"/>

        <!-- Employee info section -->
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Employee information"
                       Style="{StaticResource BodyTextStyle}"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="{Binding Employee.FullName}"
                       Style="{StaticResource BodyTextStyle}"
                       FontSize="16"/>

            <TextBlock Text="{Binding Employee.Email}"
                       Style="{StaticResource BodyTextStyle}"
                       Foreground="{StaticResource SecondaryTextBrush}"/>

            <TextBlock Text="{Binding Employee.RoleName}"
                       Style="{StaticResource BodyTextStyle}"
                       Margin="0 5 0 0"/>

            <TextBlock Text="{Binding Employee.DepartmentName}"
                       Style="{StaticResource BodyTextStyle}"/>
        </StackPanel>


        <!-- Termination date -->
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Termination date:"
                       Style="{StaticResource BodyTextStyle}"/>

            <DatePicker SelectedDate="{Binding TerminationDate, Mode=TwoWay}"
                        DisplayDateStart="{x:Static sys:DateTime.Today}"
                        Margin="0 5 0 0"
                        Background="{StaticResource InputFieldBackgroundBrush}"
                        BorderBrush="{StaticResource InputFieldBorderBrush}"/>
        </StackPanel>


        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Cancel"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource RejectButtonStyle}"
                    Width="100"/>

            <Button Content="Confirm"
                    Command="{Binding ConfirmCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"/>
        </StackPanel>
    </StackPanel>
</UserControl>
