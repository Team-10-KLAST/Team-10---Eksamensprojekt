<UserControl x:Class="Presentation.Wpf.Views.TerminateEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d"
             Background="{StaticResource PageBackgroundBrush}"
             d:DesignHeight="800" d:DesignWidth="450">

    <Grid Margin="20" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Employee info -->
            <RowDefinition Height="Auto"/>
            <!-- Termination date -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Terminate employee"
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Employee info  -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left column -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,16,0">

                <TextBlock Text="Full name"
                           Style="{StaticResource BaseTextStyle}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding Employee.FullName, Mode=OneWay}"
                         Height="33"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Style="{StaticResource ReadonlyInputFieldStyle}"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Email"
                           Style="{StaticResource BaseTextStyle}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding Employee.Email, Mode=OneWay}"
                         Height="33"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Style="{StaticResource ReadonlyInputFieldStyle}"
                         Margin="0,0,0,12"/>
            </StackPanel>

            <!-- Right column -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="16,0,0,0">

                <TextBlock Text="Role"
                           Style="{StaticResource BaseTextStyle}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding Employee.RoleName, Mode=OneWay}"
                         Height="33"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Style="{StaticResource ReadonlyInputFieldStyle}"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Department"
                           Style="{StaticResource BaseTextStyle}"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding Employee.DepartmentName, Mode=OneWay}"
                         Height="33"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Style="{StaticResource ReadonlyInputFieldStyle}"
                         Margin="0,0,0,12"/>
            </StackPanel>
        </Grid>

        <!-- Termination date -->
        <StackPanel Grid.Row="2" Margin="0,0,0,24">

            <TextBlock Text="Termination date"
                       Style="{StaticResource BaseTextStyle}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

           
            <DatePicker SelectedDate="{Binding TerminationDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        DisplayDateStart="{x:Static sys:DateTime.Today}"
                        Height="33"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Background="{StaticResource InputFieldBackgroundBrush}"
                        BorderBrush="{StaticResource InputFieldBorderBrush}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">

            <Button Content="Cancel"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource RejectButtonStyle}"
                    Margin="0,0,8,0"/>

            <Button Content="Confirm"
                    Command="{Binding ConfirmCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>

    </Grid>
</UserControl>
