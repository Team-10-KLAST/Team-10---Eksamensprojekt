<UserControl x:Class="Presentation.Wpf.Views.DeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="{StaticResource PageBackgroundBrush}">

    <Grid x:Name="Root">
        <Grid Margin="20">
            <!-- 
                Main layout:
                Row 0: Header (title + "Register device" button)
                Row 1: Search / filter bar
                Row 2: Device table
            -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- HEADER SECTION     -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Page title for the device overview -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Devices"
                               Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Register, find and manage devices."
                               Style="{StaticResource BodyTextStyle}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Main action for creating a new device request -->
                <Button Grid.Column="1"
                        Content="Register device"
                        Command="{Binding RegisterDeviceCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        VerticalAlignment="Center"/>
            </Grid>

            <!-- SEARCH / FILTER TOOLBAR    -->
            <Border Grid.Row="1" Style="{StaticResource SearchPanelStyle}">
                <StackPanel Orientation="Horizontal">

                    <!-- Search -->
                    <TextBox Width="200"
                             Margin="0,0,10,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchInputTextBoxStyle}" />

                    <!-- Device type -->
                    <ComboBox Width="150"
                              Margin="0,0,10,0"
                              ItemsSource="{Binding DeviceTypes}"
                              SelectedItem="{Binding SelectedDeviceType}"
                              Style="{StaticResource SearchInputComboBoxStyle}" />

                    <!-- Status -->
                    <ComboBox Width="150"
                              ItemsSource="{Binding DeviceStatusOptions}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource SearchInputComboBoxStyle}" />
                </StackPanel>
            </Border>

            <!--  DEVICE TABLE / DATAGRID -->
            <Border Grid.Row="2" Style="{StaticResource ListContainerStyle}">
                <DataGrid ItemsSource="{Binding Devices}"
                          Style="{StaticResource StandardDataGridStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Device" Binding="{Binding DeviceID}" Width="90" ElementStyle="{StaticResource CenteredCellTextStyle}"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="90" ElementStyle="{StaticResource LeftCellTextStyle}"/>
                        <DataGridTextColumn Header="OS" Binding="{Binding OS}" Width="90" ElementStyle="{StaticResource LeftCellTextStyle}"/>
                        <DataGridTextColumn Header="Borrower" Binding="{Binding OwnerEmail}" Width="238" ElementStyle="{StaticResource LeftCellTextStyle}"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="100" ElementStyle="{StaticResource LeftCellTextStyle}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" ElementStyle="{StaticResource LeftCellTextStyle}"/>
                        <DataGridTextColumn Header="Registered" Binding="{Binding RegistrationDate, StringFormat='{}{0:dd-MM-yyyy}'}" Width="140" ElementStyle="{StaticResource CenteredCellTextStyle}"/>
                        <DataGridTextColumn Header="Expires" Binding="{Binding ExpirationDate, StringFormat='{}{0:dd-MM-yyyy}'}" Width="140" ElementStyle="{StaticResource CenteredCellTextStyle}"/>

                        <!-- Actions column -->
                        <DataGridTemplateColumn Header="Update" Width="120">
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Update"
                                            Style="{StaticResource GridActionButtonStyle}"
                                            Command="{Binding DataContext.OpenDeviceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        
        <!-- OVERLAY -->
        <local:OverlayHost DataContext="{Binding}" />
    </Grid>
</UserControl>
