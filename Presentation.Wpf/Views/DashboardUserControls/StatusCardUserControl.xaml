<UserControl x:Class="Presentation.Wpf.Views.DashboardUserControls.StatusCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views.DashboardUserControls"
             mc:Ignorable="d">

    <Border Style="{StaticResource StatusColumnCardBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border Grid.Column="0"
                        Style="{StaticResource StatusIconCircleStyle}"
                        Background="{StaticResource PrimaryActionBrush}">
                    <Viewbox Stretch="Uniform"
                             Height="24"
                             Width="24"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                        <TextBlock Text="{Binding Icon}"
                                   FontSize="18"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Viewbox>
                </Border>


                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Text="{Binding Title}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextBrush}"/>

                <!-- Count -->
                <Button Grid.Column="2"
                        Margin="0,0,8,0"
                        Content="{Binding Count, StringFormat={}{0} items}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Background="{StaticResource PanelBackgroundBrush}"
                        Foreground="{StaticResource PrimaryTextBrush}"/>
            </Grid>

            <!-- Scrollable list -->
            <ScrollViewer Grid.Row="1"
                          Margin="0,12,0,0"
                          VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource StatusItemCardBorderStyle}">
                                <Button Command="{Binding DataContext.Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <StackPanel>
                                        <TextBlock Text="{Binding HeaderText}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SubText}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
