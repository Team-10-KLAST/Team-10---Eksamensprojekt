<UserControl x:Class="Presentation.Wpf.Views.AddRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             Background="{StaticResource PageBackgroundBrush}" Height="646" Width="738">

    <Grid Margin="100,100,100,80" Background="{StaticResource PanelBackgroundBrush}">
        <!-- Root layout -->

        <Grid Margin="20,20,20,10" Background="{StaticResource PanelBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- UI input -->
                <RowDefinition Height="*"/>
                <!-- UI comments -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                   Text="Add request"
                   Style="{StaticResource BaseHeaderTextStyle}"
                   Margin="0,0,0,16" />

            <!-- UI input -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Left -->
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Requester (e-mail)"
                Style="{StaticResource BaseTextStyle}" 
                FontWeight="SemiBold"/>
                    <TextBox Height="33"
                HorizontalAlignment="Stretch"
                Background="{StaticResource InputFieldBackgroundBrush}"
                BorderBrush="{StaticResource InputFieldBorderBrush}"
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    <!-- ComboBox -->
                    <TextBlock Text="OS"
                    Style="{StaticResource BaseTextStyle}" 
                    FontWeight="SemiBold"
                    Margin="0,12,0,4"/>
                    <ComboBox Style="{StaticResource InputFieldComboStyle}"
                    ItemsSource="{Binding OSOptions}"
                    SelectedItem="{Binding SelectedOS, Mode=TwoWay}"
                    Width="240" Height="33"/>
                </StackPanel>
                <!-- Right -->
                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock Text="Type"
                    Style="{StaticResource BaseTextStyle}" 
                    FontWeight="SemiBold"/>
                    <ComboBox Style="{StaticResource InputFieldComboStyle}"
                    ItemsSource="{Binding DeviceTypeOptions}"
                    SelectedItem="{Binding SelectedDeviceType, Mode=TwoWay}"
                    Width="240" Height="33"/>
                    <!-- ComboBox -->
                    <TextBlock Text="Location (country)"
                    Style="{StaticResource BaseTextStyle}" 
                    FontWeight="SemiBold"
                    Margin="0,12,0,4"/>
                    <ComboBox Style="{StaticResource InputFieldComboStyle}"
                    ItemsSource="{Binding CountryOptions}"
                    SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
                    Width="240" Height="33"/>
                </StackPanel>
            </Grid>

            <!-- Comments -->
            <Border Grid.Row="2" Background="Transparent"/>
            <StackPanel Grid.Row="2" Margin="0,16,0,16">
                <TextBlock Text="Comment / justification"
                       Style="{StaticResource BaseTextStyle}" 
                        FontWeight="SemiBold"/>
                <TextBox Height="110"
                     HorizontalAlignment="Stretch"
                     Background="{StaticResource InputFieldBackgroundBrush}"
                     BorderBrush="{StaticResource InputFieldBorderBrush}"
                     Text="{Binding RequestComment, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="3" Margin="0,3,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel button -->
                <Button Grid.Column="1"
                    Margin="0,0,8,0"
                    Padding="12,6"
                    Content="Cancel"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" 
                    Command="{Binding CancelCommand}"/>
                <!-- Submit button  -->
                <Button Grid.Column="2"
                    Padding="12,6"
                    Content="Submit request"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Command="{Binding SubmitCommand}" Margin="0,0,4,0"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
