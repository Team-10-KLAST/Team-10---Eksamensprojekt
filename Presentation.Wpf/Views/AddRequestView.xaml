<UserControl x:Class="Presentation.Wpf.Views.AddRequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             Background="{StaticResource PageBackgroundBrush}" Height="746" Width="738">

    <Grid Margin="100,100,100,80" Background="{StaticResource PanelBackgroundBrush}">
        <!-- Root layout -->

        <Grid Margin="20,20,20,10" Background="{StaticResource PanelBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- UI input -->
                <RowDefinition Height="auto"/>
                <!-- UI comments -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Add request"
                       Style="{StaticResource BaseHeaderTextStyle}"
                       Margin="0,0,0,16" />

            <!-- UI input -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Left -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">                    
                    <TextBlock Text="Requester (e-mail)"
                               Style="{StaticResource BaseTextStyle}" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                     
                    <TextBox Height="33"
                             HorizontalAlignment="Stretch"
                             Background="{StaticResource InputFieldBackgroundBrush}"
                             BorderBrush="{StaticResource InputFieldBorderBrush}"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"/>
                    
                    <!-- Email validering -->
                    <TextBlock Text="{Binding EmailErrorMsg}" 
                               Foreground="Red" 
                               Style="{StaticResource BaseTextStyle}"/>

                    <!-- ComboBox -->
                    <TextBlock Text="Operative System"
                               Style="{StaticResource BaseTextStyle}" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                    <ComboBox Style="{StaticResource InputFieldComboStyle}"
                              ItemsSource="{Binding OSOptions}"
                              SelectedItem="{Binding SelectedOS, Mode=TwoWay}"
                              Height="33"/>
                </StackPanel>
                <!-- Right -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <TextBlock Text="Device Type"
                               Style="{StaticResource BaseTextStyle}" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                    
                    <ComboBox Style="{StaticResource InputFieldComboStyle}"
                              ItemsSource="{Binding DeviceTypeOptions}"
                              SelectedItem="{Binding SelectedDeviceType, Mode=TwoWay}"
                              Height="33"/>
                    
                    <!-- Tom spacer for at matche valideringsfejlen i venstre side -->
                    <TextBlock Text="" Style="{StaticResource BaseTextStyle}"/>

                    <!-- ComboBox -->
                    <TextBlock Text="Location (country)"
                               Style="{StaticResource BaseTextStyle}" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,4"/>
                    
                    <ComboBox Style="{StaticResource InputFieldComboStyle}"
                              ItemsSource="{Binding CountryOptions}"
                              SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
                              Height="33"/>

                    <!-- Needed by date -->
                    <TextBlock Text="Needed by date"
                               Style="{StaticResource BaseTextStyle}"
                               FontWeight="SemiBold"
                               Margin="0,12,0,4"/>
                    

                    <DatePicker SelectedDate="{Binding NeededByDate, Mode=TwoWay}"
                                Height="33"
                                HorizontalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="{StaticResource InputFieldBackgroundBrush}"
                                BorderBrush="{StaticResource InputFieldBorderBrush}"/>
                    
                    <TextBlock Text="{Binding DateErrorMsg}" 
                               Foreground="Red" 
                               Style="{StaticResource BaseTextStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Comments -->
            <Border Grid.Row="2" Background="Transparent"/>
            <StackPanel Grid.Row="2" Margin="0,0,0,24">
                <TextBlock Text="Comment / justification"
                           Style="{StaticResource BaseTextStyle}" 
                           FontWeight="SemiBold"/>
                
                <TextBox Height="110"
                         HorizontalAlignment="Stretch"
                         Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Text="{Binding RequestComment, UpdateSourceTrigger=PropertyChanged}"/>

            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel button -->
                <Button Grid.Column="1"
                        Margin="0,0,8,0"
                        Content="Cancel"
                        Style="{StaticResource RejectButtonStyle}"
                        Command="{Binding CancelCommand}"/>
                
                <!-- Submit button  -->
                <Button Grid.Column="2"
                        Content="Submit request"
                        Command="{Binding SubmitCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                
            </Grid>
        </Grid>
    </Grid>
</UserControl>
