<UserControl x:Class="Presentation.Wpf.Views.DeleteEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             Background="{StaticResource PageBackgroundBrush}"
             d:DesignHeight="500" d:DesignWidth="400">
    
    <!-- Root layout -->
    <Grid Margin="16" Background="{StaticResource PanelBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Delete employee"
                   Style="{StaticResource BaseHeaderTextStyle}"
                   Margin="0,0,0,16" />

        <!-- Employee info section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Employee"
                       Style="{StaticResource BaseTextStyle}" 
                       FontWeight="SemiBold"/>
            
            <StackPanel Orientation="Vertical">
                <TextBlock Text= "{Binding SelectedEmployee.FullName}" Style="{StaticResource BaseTextStyle}"/>
                <TextBlock Text="{Binding SelectedEmployee.Email}" Style="{StaticResource BaseTextStyle}"/>
                <TextBlock Text="{Binding SelectedEmployee.Department}" Style="{StaticResource BaseTextStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Device status + confirmation section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16" VerticalAlignment="Top">
            <Border CornerRadius="4"
                    Padding="8"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource SuccessBrush}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasDevices}" Value="True">
                                <Setter Property="Background" Value="{StaticResource ErrorBrush}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <TextBlock Style="{StaticResource BaseTextStyle}"
                           FontWeight="SemiBold"
                           Text="{Binding DeviceStatusText}"
                           TextWrapping="Wrap" />
            </Border>

            <!-- Selected Employee info section -->
            <StackPanel Margin="0,15,0,0">
                <StackPanel.Resources>
                    <Style TargetType= "TextBlock" BasedOn="{StaticResource BaseTextStyle}" />
                </StackPanel.Resources>
                <TextBlock FontWeight="SemiBold" Text="When you delete this employee:" />
                <TextBlock Text= "• User acces will be disabled" />
                <TextBlock Text="• History is preserved for audit" />
            </StackPanel>

            <!-- Show DELETE confirmation, if employee has no devices -->
            <StackPanel>
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasDevices}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <TextBlock Text="Type &quot;DELETE&quot; to confirm:"
                           Margin="0,20,0,4"
                           Style="{StaticResource BaseTextStyle}" />

                <TextBox Height="30" 
                         HorizontalAlignment="Stretch"
                         Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Text="{Binding ConfirmationText, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="You must type DELETE exactly." 
                           Foreground="Red"
                           Margin="0,4,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowDeleteError}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Cancel button -->
            <Button Grid.Column="1"
                    Margin="0,0,8,0"
                    Padding="12,6"
                    Content="Cancel"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1" 
                    Command="{Binding CancelCommand}"/>
            <!-- Delete button  -->
            <Button Grid.Column="2"
                    Padding="12,6"
                    Content="Delete employee"
                    FontWeight="Bold"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    Command="{Binding DeleteCommand}"/>
        </Grid>
    </Grid>
</UserControl>
