<UserControl x:Class="Presentation.Wpf.Views.RegisterDeviceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    
    <Grid Background="{StaticResource PageBackgroundBrush}">
        <Grid.RowDefinitions>
            <!-- Header-->
            <RowDefinition Height="auto"/>
            <!-- Form-->
            <RowDefinition Height="*"/>
            <!-- Footer-->
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header-->
        <Grid Grid.Row = "0"
              Background="{StaticResource HeaderBackgroundBrush}">
            <TextBlock Text="Register Device"
                       FontSize="20"
                       FontWeight="Bold"
                       Height="30"
                       Style="{StaticResource HeaderTextStyle}"/>
        </Grid>
        
        <!-- Form-->
        <Grid Grid.Row="1" Margin="10,10,0,10">
            <Grid.RowDefinitions>
                <!-- Type-->
                <RowDefinition Height="auto"/>
                <!-- OS-->
                <RowDefinition Height="auto"/>
                <!-- Ownership-->
                <RowDefinition Height="auto"/>
                <!-- Location-->
                <RowDefinition Height="auto"/>
                <!-- Owner name-->
                <RowDefinition Height="auto"/>
                <!-- Dates-->
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Type-->
            <StackPanel Grid.Row="0" HorizontalAlignment="Left">
                <TextBlock Text="Type" 
                           Style="{StaticResource BaseHeaderTextStyle}"
                           FontSize="12"/>
                <TextBox Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Width="375"
                         Height="30"
                         Margin="0,5,0,10"/>
            </StackPanel>
            
            <!-- OS-->
            <StackPanel Grid.Row="1" HorizontalAlignment="Left">
                <TextBlock Text="OS" 
                           Style="{StaticResource BaseHeaderTextStyle}"
                           FontSize="12"/>
                <TextBox Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Width="375"
                         Height="30"
                         Margin="0,5,0,10"/>

            </StackPanel>
            
            <!-- Ownership-->
            <StackPanel Grid.Row="2" HorizontalAlignment="Left">
                <TextBlock Text="Ownership" 
                           Style="{StaticResource BaseHeaderTextStyle}"
                           FontSize="12"/>
                <TextBox Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Width="375"
                         Height="30"
                         Margin="0,5,0,10"/>

            </StackPanel>
            
            <!-- Location-->
            <StackPanel Grid.Row="3" HorizontalAlignment="Left">
                 <TextBlock Text="Location (country)" 
                            Style="{StaticResource BaseHeaderTextStyle}"
                            FontSize="12"/>
                <TextBox Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Width="375"
                         Height="30"
                         Margin="0,5,0,10"/>

            </StackPanel>
            
            <!-- Owner Name-->
            <StackPanel Grid.Row="4" HorizontalAlignment="Left">
                <TextBlock Text="Owner name (optional)" 
                           Style="{StaticResource BaseHeaderTextStyle}"
                           FontSize="12"/>
                <TextBox Background="{StaticResource InputFieldBackgroundBrush}"
                         BorderBrush="{StaticResource InputFieldBorderBrush}"
                         Width="375"
                         Height="30"
                         Margin="0,5,0,10"/>
            </StackPanel>

            <!-- Dates-->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Registration date-->
                <StackPanel Grid.Column="0" Margin="5,5,5,5">
                    <TextBlock Text="Registration date"
                               Style="{StaticResource BaseHeaderTextStyle}"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <DatePicker/>
                </StackPanel>

                <!-- Expiry date-->
                <StackPanel Grid.Column="1" Margin="5,5,5,5">
                    <TextBlock Text="Expiry date"
                               Style="{StaticResource BaseHeaderTextStyle}"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <DatePicker />

                </StackPanel>
                
            </Grid>
            
            


        </Grid>

        <!-- Footer -->
        <Grid Grid.Row ="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                
                <Button Content="Cancel"
                        Width="65"
                        Height="25"
                        BorderBrush="{StaticResource BorderBrush}"
                        FontWeight="Bold"
                        Margin="0,5,5,5"/>

                <Button Content="Register"
                        Width="65"
                        Height="25"
                        BorderBrush="{StaticResource BorderBrush}"
                        FontWeight="Bold"
                        Margin="0,5,5,5"/>
            </StackPanel>
        </Grid>



    </Grid>
</UserControl>
