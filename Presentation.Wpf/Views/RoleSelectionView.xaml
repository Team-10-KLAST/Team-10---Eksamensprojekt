<UserControl x:Class="Presentation.Wpf.Views.RoleSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <Border Style="{StaticResource CardBorderStyle}"
                Padding="32"
                Width="560"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="2"
                                  Opacity="0.12"/>

            </Border.Effect>


            <StackPanel>
                <TextBlock Text="Pick a role" 
                           Style="{StaticResource HeaderTextStyle}"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,28"/>

                <!-- Buttons for role selection-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Employee"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="16"
                            Width="240"
                            Margin="0"
                            Command="{Binding SelectEmployeeCommand}"/>

                    <Button Grid.Column="2"
                            Content="Asset Manager"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="52"
                            FontSize="16"
                            Width="240"
                            Margin="0"
                            Command="{Binding SelectAssetManagerCommand}"/>


                </Grid>

            </StackPanel>
        </Border>
    </Grid>

</UserControl>
